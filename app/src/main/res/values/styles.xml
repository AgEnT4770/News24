<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TVStyle">
        <item name="android:fontFamily">@font/amita_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="edit_text_style">
        <item name="android:textColorHint">@color/black</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="header_style">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/light_blue</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="button_style">
        <item name="android:backgroundTint">@color/light_blue</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="switch_style">
        <item name="android:textColor">@color/link</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>